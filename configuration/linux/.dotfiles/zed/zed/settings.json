  "languages": {
    "JSON": {
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      },
      "prettier": {
        "allowed": true,
        "parser": "json"
      }
    },
    "JSONC": {
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": [
            "--stdin-filepath",
            "{buffer_path}",
            "--trailing-comma",
            "none"
          ]
        }
      },
      "prettier": {
        "allowed": true,
        "parser": "jsonc"
      }
    },
    "TypeScript": {
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      },
      "prettier": {
        "allowed": true,
        "parser": "typescript"
      }
    },
    "Shell Script": {
      "formatter": {
        "external": {
          "command": "shfmt",
          "arguments": ["-i", "4", "-ci"]
        }
      }
    },
    "C++": {
      "formatter": {
        "external": {
          "command": "clang-format",
          "arguments": ["-style=file"]
        }
      }
    }
  },
  "lsp": {
    "clangd": {
      "binary": {
        "path": "/usr/bin/clangd",
        "arguments": [
          "-background-index",
          "--use-dirty-headers",
          "-compile-commands-dir=build"
        ]
      }
    }
  }
}
